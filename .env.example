# JWT secret (generate random 64-byte hex):
#   node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_64_byte_hex_secret_here

# Session timeout in hours
SESSION_TIMEOUT_HOURS=24

# Guest access code (any string)
GUEST_ACCESS_CODE=your_guest_code_here

# Admin email for registration approval notifications
ADMIN_EMAIL=admin@example.com

# SMTP settings (for registration approval emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Public URL (for email links)
APP_URL=https://your-domain.com
